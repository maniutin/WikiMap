<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Wiki Maps - My Favourites</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/users.css" type="text/css" />
    <link rel="icon" type="image/ico" href="/images/map.ico"/>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>
  <body>
    <%- include('partials/_header') %>
    <main>
      <div class="profile-maps-container">
        <section>
          <header>
            <h4>My Favourites</h4>
          </header>
        </section>
        <div id="favourites">
          <% for (const fav of favourites) { %>
          <div class="profile-map">
            <img
              src="<%= fav.map_image_url %>"
              alt="<%= fav.title %>"
              class="profile-map-img"
            />
            <div class="profile-map-content">
              <%= fav.title %> <%= fav.description %> <%= fav.category %>
            </div>
            <div>
              <a class="btn btn-primary" href="/maps/<%= fav.map_id %>">View</a>
              <form action="">
                <button class="btn btn-danger">Remove Favourite</button>
              </form>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </main>
  </body>
</html>
